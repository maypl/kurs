        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="37" Margin="374,68,0,0" TextWrapping="Wrap" FontSize="24" Text="" VerticalAlignment="Top" Width="244"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="37" Margin="374,110,0,0" TextWrapping="Wrap" FontSize="24" Text="" VerticalAlignment="Top" Width="244"/>
        <Button Content="done" HorizontalAlignment="Left" Margin="374,278,0,0" FontSize="24" VerticalAlignment="Top" Width="121" Height="42" Click="Button_Click"/>
        <TextBox x:Name="UserNam" HorizontalAlignment="Left" Height="37" Margin="374,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <TextBox x:Name="UserTwoNam" HorizontalAlignment="Left" Height="37" Margin="374,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <TextBox x:Name="UserThreeName" HorizontalAlignment="Left" Height="37" Margin="374,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <TextBlock FontSize="24" HorizontalAlignment="Left" Margin="258,152,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="87" Height="37"/>
        <TextBlock FontSize="20" HorizontalAlignment="Left" Margin="258,194,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="87" Height="37"/>
        <TextBlock FontSize="20" HorizontalAlignment="Left" Margin="258,236,0,0" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top" Width="87" Height="37"/>

    </Grid>
</Page>
